<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_2_8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FB6A1"
    android:gravity="center_horizontal">


        <TextView
            android:id="@+id/enter_passw"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/enter_meeting_code"
            android:textAppearance="@style/enter_passw"
            app:layout_constraintBottom_toTopOf="@+id/line_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17000002"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/line_1"
            android:layout_width="294dp"
            android:layout_height="1dp"
            android:layout_below="@+id/enter_passw"
            android:background="@drawable/line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pass4" />

        <ImageView
            android:id="@+id/pass4"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_below="@id/line_1"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="85dp"
            android:background="@drawable/rectangle_code"
            app:layout_constraintBottom_toTopOf="@+id/line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pass3"
            app:layout_constraintTop_toBottomOf="@+id/line_2" />

        <ImageView
            android:id="@+id/pass3"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_below="@id/line_1"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="85dp"
            android:layout_toRightOf="@id/pass4"
            android:background="@drawable/rectangle_code"
            app:layout_constraintBottom_toTopOf="@+id/line_1"
            app:layout_constraintEnd_toStartOf="@+id/pass4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pass2"
            app:layout_constraintTop_toBottomOf="@+id/line_2" />


        <ImageView
            android:id="@+id/pass2"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_below="@id/line_1"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="85dp"
            android:background="@drawable/rectangle_code"
            app:layout_constraintBottom_toTopOf="@+id/line_1"
            app:layout_constraintEnd_toStartOf="@+id/pass3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pass1"
            app:layout_constraintTop_toBottomOf="@+id/line_2" />

        <ImageView
            android:id="@+id/pass1"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_below="@id/line_1"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="85dp"
            android:background="@drawable/rectangle_code"
            app:layout_constraintBottom_toTopOf="@+id/line_1"
            app:layout_constraintEnd_toStartOf="@+id/pass2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_2" />


        <ImageView
            android:id="@+id/line_2"
            android:layout_width="294dp"
            android:layout_height="1dp"
            android:layout_below="@+id/pass4"
            android:background="@drawable/line"
            app:layout_constraintBottom_toTopOf="@+id/pass4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_passw" />


</android.support.constraint.ConstraintLayout>

