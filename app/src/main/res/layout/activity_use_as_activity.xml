<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FA0B6">


    <ImageView
        android:id="@+id/cicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/use_as"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintVertical_chainStyle="packed"/>


    <TextView
        android:id="@+id/use_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cicle"
        android:layout_marginBottom="15dp"
        android:text="@string/use_as"
        android:textAppearance="@style/use_as"
        app:layout_constraintBottom_toTopOf="@+id/line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cicle"
        android:elevation="7dp"/>

    <View
        android:id="@+id/line_1"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_marginBottom="45dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/voterbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/use_as"
        />

    <TextView
        android:id="@+id/votername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voter"
        android:textAppearance="@style/voter"
        app:layout_constraintBottom_toTopOf="@+id/voterbox"
        app:layout_constraintEnd_toStartOf="@+id/voterbox"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toEndOf="@+id/voterbox"
        app:layout_constraintTop_toBottomOf="@+id/voterbox"
        app:layout_constraintVertical_bias="0.504"
        android:elevation="11dp"/>

    <ImageView
        android:id="@+id/voterbox"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_alignBottom="@id/use_as"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rectangle_voter"
        app:layout_constraintBottom_toTopOf="@+id/adminbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_1"
        android:elevation="5dp"/>



    <ImageView
        android:id="@+id/adminbox"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/voterbox"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/rectangle_voter"
        app:layout_constraintBottom_toTopOf="@+id/line_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voterbox"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/admin"
        android:textAppearance="@style/voter"
        app:layout_constraintBottom_toTopOf="@+id/adminbox"
        app:layout_constraintEnd_toStartOf="@+id/adminbox"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toEndOf="@+id/adminbox"
        app:layout_constraintTop_toBottomOf="@+id/adminbox"
        app:layout_constraintVertical_bias="0.487"
        android:elevation="10dp"/>


    <View
        android:id="@+id/line_2"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminbox"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/voterbox"
        app:layout_constraintStart_toEndOf="@+id/votername"
        app:layout_constraintTop_toTopOf="@+id/voterbox"
        app:srcCompat="@drawable/hand"
        android:elevation="15dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        app:layout_constraintBottom_toBottomOf="@+id/adminbox"
        app:layout_constraintStart_toEndOf="@+id/admin"
        app:layout_constraintTop_toTopOf="@+id/adminbox"
        app:srcCompat="@drawable/smallgear_blue"
        android:elevation="15dp"/>

    <TextView
        android:id="@+id/logo_here"
        android:layout_width="77dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/logo_here"
        android:textAlignment="center"
        android:textAppearance="@style/logo_here"
        app:layout_constraintBottom_toBottomOf="@+id/cicle"
        app:layout_constraintEnd_toEndOf="@+id/cicle"
        app:layout_constraintStart_toStartOf="@+id/cicle"
        app:layout_constraintTop_toTopOf="@+id/cicle" />


</android.support.constraint.ConstraintLayout>